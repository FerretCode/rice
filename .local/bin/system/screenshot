#!/bin/sh

# This is bound to Shift+PrintScreen by default, requires maim. It lets you
# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.

case "$(printf "selected area\\ncurrent window\\nfull screen\\nselected area (copy)\\ncurrent window (copy)\\nfull screen (copy)" | dmenu -l 6 -i -p "Screenshot")" in
	"a selected area") maim -s --hidecursor pic-selected-"$(date '+%y%m%d-%H%M-%S').png" ;;
	"current window") maim -i --hidecursor "$(xdotool getactivewindow)" pic-window-"$(date '+%y%m%d-%H%M-%S').png" ;;
	"full screen") maim --hidecursor pic-full-"$(date '+%y%m%d-%H%M-%S').png" ;;
	"a selected area (copy)") maim -s --hidecursor | xclip -selection clipboard -t image/png ;;
	"current window (copy)") maim -i --hidecursor "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png ;;
	"full screen (copy)") maim --hidecursor | xclip -selection clipboard -t image/png ;;
esac
